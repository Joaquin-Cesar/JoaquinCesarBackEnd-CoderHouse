extends index.pug
block formulario

    h1="Formularios"
  
    div
        h2="Productos"
        form(action="productos" method="post")
            label(for="nombre")="Nombre:"
            br
            input(type="text" required="required" pattern="^[A-Za-z]+$" name="nombre")
            br

            label(for="imagen")="Imagen:"
            br
            input(type="url" required="required" name="imagen")
            br
      
            label(for="precio")="Precio:"
            br
            input(type="number" required="required" name="precio")
            br
      
            input(type="submit" value="Enviar")
   
    div
        a(href="/productos")= "Ver productos"
  
