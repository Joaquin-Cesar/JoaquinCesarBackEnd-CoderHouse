extends index.pug

block main 
    style. 
        .titulo {
            text-align: center;
        }

        .contenedorProductos{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-around;
        }

        .contenedorProducto{
            margin: 20px;
            border: solid black;
            text-align: center;
            padding: 5px;
            height: 170px;
            width: 120px;
        }

        p{
            border-top: solid black 2px;
        }

        .enlace{
             text-align: center;
            border: solid black 2px;
            margin-left: 550px;
             margin-right: 550px;
            background-color: bisque;
        }
        a{
            text-decoration: none;
            color: black;
        }




    if productosCargados
        section
            h1(class="titulo")="Productos"

            div(class='contenedorProductos')
                each producto in productos
                    div(class='contenedorProducto')
                        h5=producto.nombre
                        img(src=producto.imagen alt=producto.nombre class="ImagenDelProducto")
                        div
                            p=producto.precio
                                        
    
    else
        h1="No hay productos"
    br
    div(class="enlace")
        a(href="/" type="button")="Cargar un nuevo producto"


