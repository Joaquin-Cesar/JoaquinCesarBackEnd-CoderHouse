<style>

.titulo{
   
    text-align: center;
}

.contenedorProductos{
display: flex;
flex-direction: row;
flex-wrap: wrap;
justify-content: space-around;
}

.contenedorProducto{
    margin: 20px;
    border: solid black;
    text-align: center;
    padding: 5px;
    height: 170px;
    width: 120px;
}

p{
    border-top: solid black 2px;
}

.enlace{
 text-align: center;
 border: solid black 2px;
 margin-left: 550px;
 margin-right: 550px;
 background-color: bisque;
}
a{
    text-decoration: none;
    color: black;
}
</style>



{{#if productosCargados}}
    <section>
        <h1 class="titulo">Productos</h1>

        <div class='contenedorProductos'>
      {{#each productos}}
                <div class='contenedorProducto'>
                    <h5>
                       {{this.nombre}}
                    </h5>
                    <img src={{this.imagen}} alt=  {{this.nombre}} class="ImagenDelProducto"/>
                        <div>
                            <p>
                               {{this.precio}}
                            </p>
                        </div>
                </div>
                 {{/each}}
        </div>
    </section>
   {{else}}
        <h1>No hay productos</h1>
       {{/if}}
            <br>
            <div class="enlace">
                <a href="/" type="button">Cargar un nuevo producto</a>
            </div>
  