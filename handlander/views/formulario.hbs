    <h2>Productos</h2>
    <form action="productos" method="post">
       <label for="nombre">Nombre:</label><br>
      <input type="text"  required="required" pattern="^[A-Za-z]+$" id="nombre" name="nombre"><br>
      <label for="imagen">Imagen:</label><br>
      <input type="url"  required="required"  name="imagen"><br>
